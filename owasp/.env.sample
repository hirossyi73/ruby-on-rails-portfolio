# --- 必須 ---
SERVICE_API_NAME=backend
OUT_DIR=./_volumes
ZAP_IMAGE=zaproxy/zap-stable
AScanDurationMins=2

# --- OpenAPI は URL かローカルのいずれか ---
# OPENAPI_URL=http://backend:3000/openapi.json
OPENAPI_LOCAL_FILE="../backend/src/swagger.yaml"

# --- Bearer を事前指定しない：ROPCで取得する ---
AUTH_MODE=oauth2_password

# ROPC: トークンエンドポイント & クレデンシャル
TOKEN_URL=http://localhost:13000/api/oauth/token
CLIENT_ID=your_client_id
CLIENT_SECRET=your_client_secret
USERNAME=test@example.com
PASSWORD=your_password

# 任意
SCOPE=""
# 返却JSONからの抽出パス（jqフィルタ）
# 例：{"access_token":"..."} → .access_token
TOKEN_JQ=.access_token

# 除外パス（任意／カンマ区切りの正規表現）
EXCLUDE_REGEX=.*/admin/.*,.*/internal/.*
