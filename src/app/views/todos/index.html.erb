<h1>Todo一覧</h1>

<p><%= link_to '新規作成', new_todo_path %></p>

<% if @todos.any? %>
<ul>
    <% @todos.each do |todo| %>
    <li>
        <strong><%= todo.title %></strong>
        <% if todo.completed %>
        <em>(完了)</em>
        <% end %>
        <%= link_to '編集', edit_todo_path(todo) %>
        <%= link_to '削除', todo_path(todo), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    </li>
    <% end %>
</ul>
<% else %>
<p>Todoはまだありません。</p>
<% end %>