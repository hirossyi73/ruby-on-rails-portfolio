# Rails Backend Environment Variables Configuration
# Note: MYSQL_* variables are not needed here as they are for MySQL container initialization
# This file contains only variables used by the Rails application itself

# Database Connection Configuration (used by Rails app)
DATABASE_HOST=db
DATABASE_USERNAME=rails
DATABASE_PASSWORD=password
DATABASE_NAME=nuxt_railsapi_development
DATABASE_TEST_NAME=nuxt_railsapi_test

# Rails Configuration
RAILS_MAX_THREADS=5
PORT=3000
SECRET_KEY_BASE=your_secret_key_here
RAILS_LOG_LEVEL=info

# Domain Configuration for CORS and OAuth2
WEB_DOMAIN=localhost

# Puma Configuration
# WEB_CONCURRENCY=1
# PIDFILE=tmp/pids/server.pid

# Solid Queue Configuration (for background jobs)
# SOLID_QUEUE_IN_PUMA=true

# Rails Environment
RAILS_ENV=development

# Bundle Configuration (usually set automatically)
# BUNDLE_GEMFILE=Gemfile
